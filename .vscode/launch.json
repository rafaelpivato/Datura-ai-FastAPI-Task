{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Python: Run All Tests",
      "type": "debugpy",
      "request": "launch",
      "module": "pytest",
      "args": ["tests/", "-v"],
      "console": "integratedTerminal",
      "justMyCode": false
    },
    {
      "name": "Python: Run Current Test File",
      "type": "debugpy",
      "request": "launch",
      "module": "pytest",
      "args": ["${file}", "-v"],
      "console": "integratedTerminal",
      "justMyCode": false
    },
    {
      "name": "Python: Run Test Under Cursor",
      "type": "debugpy",
      "request": "launch",
      "module": "pytest",
      "args": ["${file}::${selectedText}", "-v"],
      "console": "integratedTerminal",
      "justMyCode": false
    }
  ]
}
